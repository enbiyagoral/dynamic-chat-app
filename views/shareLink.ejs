<%- include('layouts/header.ejs') %>

<div class="container">

    <div>
        <img src="/<%= group.image %>" alt="" width="200px" height="200px">
        <p><b><%= group.name %></b></p>
        <p><b>Total Members: </b> <%= totalMembers %></p>

        <% 
            if(availible != 0){
                %>
                    <p>Availible for <b><%= availible %></b> Members only.</p>
                <% 
            }

            if(isOwner){
                %>
                    <p>You are the creator this Group, so you can't join this group</p>
                <% 
            }
            else if(availible == 0){
                %>
                    <p>Group already filled!</p>
                <% 
            } 
            else if(isJoined > 0){
                %>
                    <p>You already joined this Group!</p>
                <% 
            }
             
            else{
                %>
                    <button class="btn btn-primary">Join Now</button>
                <% 
            }
        %>



    </div>


</div>



<%- include('layouts/footer.ejs') %>
